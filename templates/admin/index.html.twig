{% extends 'base.html.twig' %}

{% block title %}admin index{% endblock %}
{% block content %}
    <h1>admin index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                
                <th>username</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for admin in admins %}
            <tr>
                <td>{{ admin.id }}</td>
                <td>{{ admin.email }}</td>
                
                <td>{{ admin.username }}</td>



                <td>

                 <div class="btn-group" role="group" aria-label="Basic example">
                 <a  class="btn btn-outline-primary" href="{{ path('app_admin_show', {'id': admin.id}) }}">Show</a>
                    <a class="btn btn-outline-primary"  href="{{ path('app_admin_edit', {'id': admin.id}) }}">Edit</a>

                   <a class="btn btn-outline-danger"> {{ include('admin/_delete_form.html.twig') }} </a>
               
                 </div>
                 </td>



            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-outline-success"  href="{{ path('app_admin_new') }}">Create new</a>

{% endblock %}
