{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}
{% block content %}
    <h1>User index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                
                <th>Username</th>
                <th>Picture</th>
                
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        
        {% for user in users %}
       {% if user.id != app.user.id %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                
                <td>{{ user.username }}</td>

                <td>
							{% if user.avatar == true %}

								<img src="{{ asset('uploads/images/user/images/' ~ user.avatar) }}" width="45" height="45" class="rounded-circle">


							{% elseif user.avatar == false %}
								<img src="../../../../assets/img/picture.png" width="45" height="45" class="rounded-circle">


							{% endif %}
				</td>



                <td>

                 <div class="btn-group" role="group" aria-label="Basic example">
                 <a  class="btn btn-outline-primary" href="{{ path('app_user_show', {'id': user.id}) }}">Show</a>
                    <a class="btn btn-outline-primary"  href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>

                   <a class="btn btn-outline-danger"> {{ include('user/_delete_form.html.twig') }} </a>
               
                 </div>
                 </td>



            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-outline-success"  href="{{ path('app_user_new') }}">Create new</a>

{% endblock %}
